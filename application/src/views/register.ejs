<style>
  #registerFormColor {
    color: #fff;
  }

  .leftTextColor {
    color: #fff;
  }

  #home-section {
    background-repeat: no-repeat;
    background-size: cover;
    background-attachment: fixed;
    min-height: 600px;
  }

  #home-section .dark-overlay {
    top: 0;
    left: 0;
    width: 100%;
    height: 600px;
    background: rgba(0, 0, 0, 0.7);
  }

  #home-section .home-inner {
    padding-top: 20px;
  }

  #home-section .card-form {
  }

  #explore-head-section {
    background: #fff;
    color: #333;
  }
</style>

<body>
  <header id="home-section">
    <div class="dark-overlay">
      <div class="home-inner container">
        <div class="row">
          <div class=" leftTextColor col-lg-8 d-none d-lg-block">
            <h1 class="display-4">
              <strong>SEARCH</strong>
            </h1>
            <div class="d-flex">
              <div class="p-4 align-self-start">
                <i class="fas fa-check fa-2x"></i>
              </div>
            </div>

            <div class="d-flex">
              <div class="p-4 align-self-start">
                <i class="fas fa-check fa-2x"></i>
              </div>
              <div class="p-4 align-self-end"></div>
            </div>

            <div class="d-flex">
              <div class="p-4 align-self-start">
                <i class="fas fa-check fa-2x"></i>
              </div>
            </div>
          </div>
          <!--form card-->
          <div class="col-lg-4" id="registerFormColor">
            <div class="card bg-primary text-center card-form">
              <div class="card-body">
                <h3>Register Today</h3>

                <% if (typeof errors != 'undefined') { %>
                <div class="alert alert-danger" style="text-align:left">
                  <ul style="padding-left: 15px;">
                    <% errors.forEach(function(error){ %>
                    <li><%= error.msg %></li>
                    <% }) %>
                  </ul>
                </div>
                <% } %>

                <form method="post" action="/register">
                  <!-- name -->
                  <div class="form-group">
                    <input
                      required
                      name="name"
                      type="text"
                      class="form-control form-control-lg"
                      placeholder="Name"
                      value="<%= (typeof body != 'undefined' && typeof body.name != 'undefined') ? body.name : '' %>"
                    />
                  </div>
                  <!--email-->
                  <div class="form-group">
                    <input
                      name="email"
                      type="email"
                      class="form-control form-control-lg"
                      placeholder="Email: @mail.sfsu.edu"
                      required
                      value="<%= (typeof body != 'undefined' && typeof body.email != 'undefined') ? body.email : '' %>"
                    />
                  </div>
                  <!--password-->
                  <div class="form-group">
                    <input
                    required
                      name="password"
                      type="password"
                      class="form-control form-control-lg"
                      placeholder="Password"
                    />
                  </div>
                  <!--password-->
                  <div class="form-group">
                    <input
                    required
                      name="password_confirm"
                      type="password"
                      class="form-control form-control-lg"
                      placeholder="Confirm Password"
                    />
                  </div>
                  <!--agree to terms and conditions-->
                  <div class="form-check">
                    <input  required name="terms" class="form-check-input" type="checkbox"
                    value="1" id="termsAndConditionsCheck" <%= (typeof body !=
                    'undefined' && typeof body.terms != 'undefined') ? 'checked'
                    : '' %> />
                    <label class="form-check-label" for="appartmentCheck">
                      Agree to
                      <a href="" style="color: blue;">terms and conditions</a>
                    </label>
                    <p></p>
                  </div>
                  <input
                  required
                    type="hidden"
                    name="recaptcha_response"
                    id="recaptchaResponse"
                  />
                  <!--submit button-->
                  <input
                    type="submit"
                    value="Submit"
                    class="btn btn-outline-light btn-block"
                  />
                  <p></p>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </header>

  <!--EXPLORE HEAD-->
  <section id="explore-head-section">
    <div class="container">
      <div class="row">
        <div class="col text-center py-5">
          <h1 class="display-4">Explore Current Listings</h1>
          <p class="lead">
            Lorem ipsum dolor, sit amet consectetur adipisicing elit. Distinctio
            voluptates labore ut repellat in necessitatibus inventore tenetur
            tempora vero quas?
          </p>
          <a href="/" class="btn btn-outline-secondary">Go To Listings</a>
        </div>
      </div>
    </div>
  </section>

  <% if (typeof login != 'undefined') { %>
  <script type="text/javascript">
    $("#loginModal").modal("show");
  </script>
  <% } %>
</body>

<footer></footer>
