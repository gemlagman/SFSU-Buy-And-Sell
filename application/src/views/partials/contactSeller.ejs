<!-- /views/partials/contactSeller.ejs -->

<div class="modal fade text-dark" id="contactSeller-<%= cards.id %>">
  <div class="modal-dialog modal-dialog-centered modal-md">
    <div class="modal-content">
      <div class="modal-body">
        <div class="container ">
          <div class="modal-header">
            <h2 class="w-100 text-center">Contact Seller</h2>
            <button class="close" data-dismiss="modal">
              <span>&times;</span>
            </button>
          </div>
          <div class="outer-post-info">
          <div class="inner-post-info">
            <img
              src="<%= cards.image %>"
              style="height: 50px; width: 50px"
              alt=""
            />
           <%=cards.title%>
            <span class="itemPrice">$<%= cards.price %></span>
          </div>
          <div class="inner-post-info"> <%= cards.description %> </div>
        </div>
    </div>
          <form action="/message" method="POST">
            <div class="form-group">
              <!-- <label for="listingId" name = "listingId" value="<%= cards.id %>"> <%= cards.id %> </label> -->
              <input type="hidden" name = "listingId" value="<%=cards.id %>"></input>
            </div>
            <div class="form-group">
              <!-- <label for="receiverId" name = "receiverId" value ="<%= cards.user_id %>"> <%= cards.user_id %> </label> -->
              <input type="hidden" name = "receiverId" value="<%=cards.user_id %>"></input>
            </div>
            <div class="form-group">
              <label for="message">Message</label>
              <input placeholder="Hi, I would like to buy this item!" type="text" name = "message" class="form-control"></input>
            </div>
            <div class="modal-footer">
                <button class="btn btn-warning btn-block">Cancel</button>
              <button style="background-color: indigo; color: white;;" class="btn btn-block  m-0" type="submit">Submit</button>
              
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
