<!-- /views/partials/viewItem.ejs -->

<div class="modal fade text-dark" id="viewItem-<%= cards.id %>">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content m-0 p-0">
            <div class="modal-body p-0">
                <div class="modalCard row">

                    <div class="col-lg-6 col-sm-12 p-0 m-0">
                        <div class="row justify-content-center">

                            <div class="mainpic">
                                <img src="<%= cards.image %>" style="height: 400px; width: 100%;" alt="">

                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6 col-sm-12">
                        <div class="itemdescrip">
                            <div class="modal-header w-100">
                                <h2 class="modal-title">
                                    <%= cards.title %>
                                    </h2>
                                    <button class="close" data-dismiss="modal">
                                        <span>&times;</span>
                                    </button>
                            </div>
                            <h6 class="itemPrice">$<%= cards.price %></h6>
                            <p class="itemDescription"><%= cards.description %> </p>
                        </div>
                        <div class="modal-footer btn-block">
                            <a class="modalbtn " href="#contactSeller">
                                <button class="btn btn-warning btn-block" style="width: 100%"
                                        data-toggle="modal" data-target="#contactSeller-<%= cards.id %>">
                                    Contact Seller
                                </button>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

