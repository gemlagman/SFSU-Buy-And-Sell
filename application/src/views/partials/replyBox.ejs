<!-- /views/partials/contactSeller.ejs -->

<div class="modal fade text-dark" id="replyBox-<%=  emails.id %>">
        <div class="modal-dialog modal-dialog-centered modal-md">
          <div class="modal-content">
            <div class="modal-body">
              <div class="container ">
                <div class="modal-header">
                  <h2 class="w-100 text-center">Reply</h2>
                  <button class="close" data-dismiss="modal">
                    <span>&times;</span>
                  </button>
                </div>
                <div class="outer-post-info">
                <div class="inner-post-info">
                 <%= emails.sender %>: 
    
                  <span class="itemPrice">  <%=emails.message%></span>
                </div>
                <div class=""> <%= emails.receiverId %> </div>
              </div>
          </div>
                <form action="/message" method="POST">
                  <div class="form-group">
                    <!-- <label for="listingId" name = "listingId" value="<%= cards.id %>"> <%= cards.id %> </label> -->
                    <input type="hidden" name = "listingId" value="<%= emails.listing_id %>"></input>
                  </div>
                  <div class="form-group">
                    <!-- <label for="receiverId" name = "receiverId" value ="<%= cards.user_id %>"> <%= cards.user_id %> </label> -->
                    <input type="hidden" name = "receiverId" value="<%= emails.sender_id %>"></input>
                  </div>
                  <div class="form-group">
                    <label for="message">Message</label>
                    <input type="text" name = "message" class="form-control"></input>
                  </div>
                  <div class="modal-footer">
                    <button class="btn btn-primary btn-block " type="submit">Submit</button>
                    <button class="btn btn-warning btn-block m-0">Cancel</button>
                   
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>